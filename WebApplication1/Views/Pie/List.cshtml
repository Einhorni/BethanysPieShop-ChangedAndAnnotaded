@* Renders dynamic html and the result is rendered in the body of _Layout.cshtml*@

@* to accessp properties on that model *@
@model PieListViewModel;

@* can be removed, when we have a ViewStart file - this will be rendered whenever a view is rendered *@
@* @{
    Layout = "_Layout";
} *@

<h1>@Model.CurrentCategory</h1>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach(var pie in Model.Pies)
    {
        <partial name="_PieCard" model="pie"/>
    }
</div> 